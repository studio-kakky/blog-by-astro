---
import Layout from '../layouts/Layout.astro';
import { CommonHeader } from '../components/common/header';
import { Articles } from '../components/articles/articles';
import { getArticleSummary } from '../shared/models/article/get-article-summary';

const articles = await getArticleSummary();
const summaries = Array.from(Array(5)).reduce((output) => {
	return output.concat(articles)
}, []);
---
<style>
	main {
		margin: 0;
		background-color: #fff;
		max-width: 900px;
		margin: 0 auto;
	}
</style>
<Layout title="Welcome to Astro.">
	<CommonHeader />
	<main>
		<Articles items={summaries}/>
	</main>
</Layout>
